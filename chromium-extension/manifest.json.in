{
    "manifest_version": 2,
    "name": " Desktop Webapp",
    "version": "@VERSION@",
    "homepage_url": "@PACKAGE_URL@",

    "description": "Desktop integration for Chrome apps",

    "background": {
        "page": "background.html",
	"persistent": true
    },

    "permissions": [
        "management",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "plugins": [
        { "path": "libdesktopwebapp_npapi_plugin.so" }
    ]
}

